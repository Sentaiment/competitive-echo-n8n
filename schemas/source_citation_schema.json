{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sentaiment Source Citation Schema v2.0",
  "description": "Comprehensive source citation schema following Sentaiment PRD v2.0",
  "type": "object",
  "required": ["source_citations"],
  "properties": {
    "source_citations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "claim_text",
          "claim_category",
          "claim_impact_score",
          "source_type",
          "authority_score",
          "verification_status",
          "content_type",
          "bias_indicators",
          "confidence_level",
          "sentiment_direction",
          "influence_weight",
          "actionability_score",
          "geographic_scope",
          "time_sensitivity"
        ],
        "properties": {
          "claim_text": {
            "type": "string",
            "description": "Specific, actionable competitive claim",
            "minLength": 10,
            "maxLength": 500
          },
          "claim_category": {
            "type": "string",
            "enum": [
              "competitive_analysis",
              "market_positioning",
              "product_comparison",
              "service_quality",
              "pricing_analysis",
              "brand_perception",
              "customer_satisfaction",
              "operational_metrics",
              "strategic_initiatives",
              "other"
            ]
          },
          "claim_impact_score": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10,
            "description": "Impact score for the claim (1-10)"
          },
          "source_type": {
            "type": "string",
            "enum": [
              "web_research",
              "training_data",
              "company_report",
              "news_article",
              "academic_paper",
              "industry_report",
              "press_release",
              "social_media",
              "review_platform",
              "government_document",
              "other"
            ]
          },
          "source_url": {
            "type": "string",
            "format": "uri",
            "description": "Actual source URL if available"
          },
          "source_domain": {
            "type": "string",
            "description": "Domain of the source"
          },
          "publication_date": {
            "type": "string",
            "format": "date",
            "description": "Publication date in YYYY-MM-DD format"
          },
          "author": {
            "type": "string",
            "description": "Author name or organization",
            "minLength": 1,
            "maxLength": 200
          },
          "author_credibility_score": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10,
            "description": "Author credibility score (1-10)"
          },
          "source_origin": {
            "type": "string",
            "enum": [
              "web_research",
              "training_data",
              "company_filing",
              "hybrid"
            ]
          },
          "training_data_cutoff": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$",
            "description": "Training data cutoff in YYYY-MM format"
          },
          "authority_score": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10,
            "description": "Source authority score (1-10)"
          },
          "verification_status": {
            "type": "string",
            "enum": ["verified", "unverified", "conflicting"]
          },
          "content_type": {
            "type": "string",
            "enum": [
              "competitive_research",
              "earnings_call",
              "press_release",
              "analyst_report",
              "news_article",
              "review",
              "social_media_post",
              "academic_paper",
              "government_document",
              "other"
            ]
          },
          "bias_indicators": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          },
          "cross_references": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of cross-references"
          },
          "confidence_level": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          },
          "supporting_evidence": {
            "type": "string",
            "description": "Specific data points or context",
            "maxLength": 1000
          },
          "real_time_indicators": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "recent_announcement",
                "market_movement",
                "urls_accessible",
                "recent_events",
                "web_search_results"
              ]
            }
          },
          "brand_mention_type": {
            "type": "string",
            "enum": [
              "direct_comparison",
              "market_positioning",
              "strategic_move",
              "product_launch",
              "service_announcement",
              "financial_performance",
              "other"
            ]
          },
          "sentiment_direction": {
            "type": "string",
            "enum": ["positive", "negative", "neutral"]
          },
          "influence_weight": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Influence weight (0.0-1.0)"
          },
          "strategic_relevance": {
            "type": "string",
            "enum": [
              "market_share",
              "pricing",
              "product_launch",
              "expansion",
              "service_quality",
              "brand_perception",
              "operational_efficiency",
              "customer_satisfaction",
              "other"
            ]
          },
          "actionability_score": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10,
            "description": "Actionability score for strategic relevance (1-10)"
          },
          "geographic_scope": {
            "type": "string",
            "enum": ["global", "regional", "local"]
          },
          "time_sensitivity": {
            "type": "string",
            "enum": ["immediate", "quarterly", "annual"]
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Tags for categorization"
          }
        }
      }
    },
    "extraction_metadata": {
      "type": "object",
      "properties": {
        "total_claims_found": {
          "type": "integer",
          "minimum": 0
        },
        "high_impact_claims": {
          "type": "integer",
          "minimum": 0
        },
        "source_diversity_score": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        },
        "recency_score": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        },
        "deduplication_applied": {
          "type": "boolean"
        },
        "extraction_timestamp": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
